#! /usr/bin/env ruby

begin
  require "vspheremonitoring"
  require "rbvmomi"
  require "json"
  require "yaml"
rescue LoadError
  puts 'Some of the required gems have not been found'
  exit
end

def run

  config = YAML::load(File.read('etc/vsphere.yaml'))
  vim = RbVmomi::VIM.connect :host     => config[:host],
                             :user     => config[:user],
                             :password => config[:password],
                             :insecure => true

  data = Hash.new
  data[:vsphere] = VSphereMonitoring.process_all_datacenters(config[:datacenters],vim)
  data

end

output = run()
puts output.to_json

